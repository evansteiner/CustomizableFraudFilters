<?xml version="1.0"?>
<config>
   <tabs>
      <foundation translate="label" module="customizablefraudfilters">
        <label>Foundation Extensions</label>
          <sort_order>100</sort_order>
      </foundation>
    </tabs>
    <sections>
      <customizablefraudfilters  translate="label" module="customizablefraudfilters">                    
      <label>Customzable Fraud Filters</label>
      <tab>foundation</tab>
      <frontend_type>text</frontend_type>
      <sort_order>2</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>            
        <groups>
          <filters translate="label"> 
            <label>Filters</label>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
               <fields>
                 <city_flag translate="label">
                   <label>Shipping city does not match billing city.</label>
                     <frontend_type>radios</frontend_type>
                     <source_model>adminhtml/system_config_source_yesno</source_model>
                     <sort_order>1</sort_order>
                     <show_in_default>1</show_in_default>
                     <show_in_website>1</show_in_website>
                     <show_in_store>1</show_in_store>
                     <comment>Select 'yes' to hold orders when the cities do not match.</comment>
                </city_flag>
                 <zip_code_flag translate="label">
                   <label>Shipping zip code does not match billing zip code.</label>
                     <frontend_type>radios</frontend_type>
                     <source_model>adminhtml/system_config_source_yesno</source_model>
                     <sort_order>2</sort_order>
                     <show_in_default>1</show_in_default>
                     <show_in_website>1</show_in_website>
                     <show_in_store>1</show_in_store>
                     <comment>Select 'yes' to hold orders when the zip codes do not match.</comment>
                </zip_code_flag>
             </fields>
          </filters>
         </groups>
      </customizablefraudfilters>
    </sections>
</config>